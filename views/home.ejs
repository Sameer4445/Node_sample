<%- include('partials/head') %>
</head>
<body class="bg-gray-50 font-sans">
  <%- include('partials/nav') %>

  <div class="container mx-auto px-4 py-8 min-h-screen flex flex-col items-center">
    <!-- Hero Section -->
    <div class="text-center mb-12 w-full flex flex-col items-center">
      <h1 class="text-5xl font-extrabold text-black mb-4">Welcome to Airbnb</h1>
      <p class="text-lg text-gray-600 mb-6">Find your perfect home away from home.</p>
      <a href="/get-home"
         class="inline-block bg-purple-600 hover:bg-purple-700 text-white font-bold py-4 px-10 rounded-full shadow-lg transition-transform transform hover:scale-105 mb-2">
        Register Your Home
      </a>
    </div>

    <!-- Available Homes Section -->
    <h2 class="text-3xl font-bold text-purple-700 mb-8 text-center">Available Homes</h2>

<div class="w-full max-w-screen-xl mx-auto px-4 py-8">
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
    <% names.forEach(name => { %>
      <div class="bg-white rounded-2xl shadow-2xl overflow-hidden flex flex-col transition-transform duration-300 hover:-translate-y-2">
        <% if (name.image) { %>
          <img src="<%= name.image %>" alt="Home Image" class="w-full h-64 object-cover">
        <% } %>
        <div class="p-6 flex flex-col items-center text-center">
          <h3 class="text-2xl font-bold text-purple-800 mb-3"><%= name.username %></h3>
          
          <% if (name.location) { %>
            <p class="text-gray-600 mb-2">
              <span class="font-semibold">Location:</span> <%= name.location %>
            </p>
          <% } %>
          
          <% if (name.price) { %>
            <p class="text-gray-600 font-semibold">
              Price: <%= name.price %>
            </p>
          <% } %>
        </div>
      </div>
    <% }) %>


    </div>
  </div>
</body>
</html>
