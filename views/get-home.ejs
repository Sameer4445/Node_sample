<%- include('partials/head') %>

<body class="bg-gray-100 font-sans">
  <%- include('partials/nav') %>

    <div class="min-h-screen flex items-center justify-center bg-gray-100 py-12 px-4 sm:px-6 lg:px-8">
      <div class="max-w-lg w-full space-y-8 p-10 bg-white shadow-2xl rounded-2xl">
        <div class="text-center">
          <h2 class="text-4xl font-extrabold text-gray-900">
            Host Your Home
          </h2>
          <p class="mt-2 text-lg text-gray-600">
            Join our community of hosts and start earning.
          </p>
        </div>
        <form action="/get-home" method="POST" class="mt-8 space-y-6">
          <input type="text" name="username" placeholder="Charming Cottage" required
            class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-2 focus:ring-purple-600 focus:border-transparent">
          <input type="text" name="location" placeholder="San Francisco, CA" required
            class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-2 focus:ring-purple-600 focus:border-transparent">
          <input type="text" name="price" placeholder="$150 / night" required
            class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-2 focus:ring-purple-600 focus:border-transparent">
          <input type="text" name="image" placeholder="https://example.com/image.jpg"
            class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-2 focus:ring-purple-600 focus:border-transparent">
          <button type="submit"
            class="w-full flex justify-center py-3 px-4 border border-transparent text-lg font-medium rounded-lg text-white bg-purple-700 hover:bg-purple-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 shadow-lg transform hover:scale-105 transition-all duration-300">
            Register Home
          </button>
        </form>
      </div>
    </div>
</body>
